{
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "demos/*"
  ],
  "scripts": {
    "build": "turbo run build --filter=!./demos/*",
    "dev": "turbo run dev --filter=!./apps/docs --filter=!./demos/* --no-cache --continue",
    "demo:angular": "turbo run @praisecharts/studio-angular-demo#start",
    "serve-docs": "turbo run @praisecharts/studio-docs#dev",
    "lint": "turbo run lint",
    "test": "turbo run test --filter=./packages/* --filter=./apps/* --filter=!./packages/angular",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=docs^... && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.24.4",
    "eslint": "^8.25.0",
    "@praisecharts/eslint-config": "*",
    "prettier": "^2.5.1",
    "turbo": "latest"
  }
}
